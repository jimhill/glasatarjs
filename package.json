{
  "name": "@jimhill/glasatarjs",
  "version": "1.0.0",
  "description": "A beautiful WebGL-based voice visualizer that recreates the effect of textured privacy glass",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:lib && npm run build:demo",
    "build:lib": "tsc -p tsconfig.lib.json",
    "build:demo": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "security-check": "npm audit --audit-level moderate",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "deploy:demo": "./scripts/deploy-demo.sh",
    "prepare": "husky"
  },
  "keywords": [
    "webgl",
    "audio-visualization",
    "voice-visualization",
    "react",
    "typescript",
    "privacy-glass"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "canvas": "^2.11.2",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.1.7",
    "jsdom": "^23.0.0",
    "lint-staged": "^16.1.4",
    "prettier": "^3.6.2",
    "typescript": "^5.0.0",
    "vite": "^7.0.6",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.46.0",
    "@rollup/rollup-darwin-x64": "^4.46.0",
    "@rollup/rollup-darwin-arm64": "^4.46.0",
    "@rollup/rollup-win32-x64-msvc": "^4.46.0"
  },
  "files": [
    "dist",
    "src/lib",
    "src/components",
    "core.js",
    "core.d.ts",
    "README.md"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./core": {
      "import": "./core.js",
      "types": "./core.d.ts"
    }
  }
}
